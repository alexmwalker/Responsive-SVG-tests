svg(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 150 150')
  style.
    text{font-family: Roboto, sans-serif; font-size: 19px; fill: #333}
    #svg-test-2 #tick rect{fill: none;}
    #svg-test-2 #cross rect{fill: red;}

    :root>#svg-test-2 #tick rect{fill: greenyellow;}
    :root>#svg-test-2 #cross rect{fill: none;}
    :root svg{outline: 4px orange dashed;}
    .interactive #offscreen{transform: translatex(-48px)}
  script. 
    //<![CDATA[

    var el = document.querySelector('#svg-test-2');
    function interactiveTest(){
      if (!hasClass(el, 'interactive')) addClass(el, 'interactive'); 
    }
    interactiveTest(); 
    //]]>

  a#svg-test-2(href='#0')
    rect(width='150', height='150', fill='#4BDBEF')
    text#interactive
      tspan(x='12', y='40.5') INTERACTIVE
    text#offscreen
      tspan(x='148', y='57.5') OFFSCREEN
    g#cross
      rect(x='50.4', y='57', width='62', height='9', transform='rotate(45 50.4 57)')
      rect(x='94.2', y='63.4', width='62', height='9', transform='rotate(135 94.2 63.4)')
    g#tick
      rect(x='48', y='83', width='26', height='9', transform='rotate(45 48 83)')
      rect(x='100', y='68', width='55', height='9', transform='rotate(135 100 68)')
